{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "lib": ["ES2019"],
    "moduleResolution": "node",
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build"
  }
}